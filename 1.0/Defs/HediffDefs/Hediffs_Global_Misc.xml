<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <HediffDef>
        <defName>Adrenaline</defName>
        <label>adrenaline rush</label>
        <hediffClass>Adrenaline.Hediff_AdrenalineRush</hediffClass>
        <defaultLabelColor>(1, 0.2, 0.2)</defaultLabelColor>
        <initialSeverity>0</initialSeverity>
        <maxSeverity>1</maxSeverity>
        <stages>

            <li>
                <label>slight</label>
                <capMods>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>0.05</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.05</offset>
                    </li>
                    <li>
                        <capacity>Sight</capacity>
                        <offset>0.05</offset>
                    </li>
                </capMods>
                <painFactor>0.9</painFactor>
            </li>

            <li>
                <label>moderate</label>
                <minSeverity>0.25</minSeverity>
                <capMods>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <offset>0.2</offset>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>0.15</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Sight</capacity>
                        <offset>0.1</offset>
                    </li>
                </capMods>
                <painFactor>0.83</painFactor>
            </li>

            <li>
                <label>intense</label>
                <minSeverity>0.5</minSeverity>
                <capMods>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <offset>0.3</offset>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>0.2</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>0.15</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.15</offset>
                    </li>
                    <li>
                        <capacity>Sight</capacity>
                        <offset>0.15</offset>
                    </li>
                </capMods>
                <painFactor>0.75</painFactor>
            </li>

            <li>
                <label>extreme</label>
                <minSeverity>0.75</minSeverity>
                <capMods>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <offset>0.5</offset>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>0.25</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>0.2</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.2</offset>
                    </li>
                    <li>
                        <capacity>Sight</capacity>
                        <offset>0.2</offset>
                    </li>
                </capMods>
                <hediffGivers>
                    <li Class="HediffGiver_Random">
                        <hediff>HeartAttack</hediff>
                        <mtbDays>1.7</mtbDays>
                        <partsToAffect>
                            <li>Heart</li>
                        </partsToAffect>
                    </li>
                </hediffGivers>
                <painFactor>0.65</painFactor>
            </li>

        </stages>
        <modExtensions>
            <li Class="Adrenaline.HediffDefExtension">
                <adrenalineRush>
                    <targetSeverityPerTotalThreatSignificance>0.65</targetSeverityPerTotalThreatSignificance>
                    <targetSeverityPerRecentPainFelt>1.7</targetSeverityPerRecentPainFelt>
                    <baseSeverityGainPerDay>28.8</baseSeverityGainPerDay> <!-- 1.2 per hour -->
                    <severityGainFactorOffsetPerRecentPainFelt>4.5</severityGainFactorOffsetPerRecentPainFelt>
                    <baseSeverityLossPerDay>40.8</baseSeverityLossPerDay> <!-- 1.7 per hour -->
                </adrenalineRush>
                <stages>
                    <!-- Slight -->
                    <li>
                        <meleeDamageFactor>1.05</meleeDamageFactor>
                    </li>

                    <!-- Moderate -->
                    <li>
                        <meleeDamageFactor>1.125</meleeDamageFactor>
                    </li>

                    <!-- Intense -->
                    <li>
                        <meleeDamageFactor>1.2</meleeDamageFactor>
                    </li>

                    <!-- Extreme -->
                    <li>
                        <meleeDamageFactor>1.3</meleeDamageFactor>
                    </li>
                </stages>
            </li>
        </modExtensions>
    </HediffDef>

    <HediffDef>
        <defName>AdrenalineCrash</defName>
        <label>adrenaline crash</label>
        <hediffClass>Adrenaline.Hediff_AdrenalineCrash</hediffClass>
        <defaultLabelColor>(0.6, 0.4, 0.4)</defaultLabelColor>
        <initialSeverity>0</initialSeverity>
        <maxSeverity>1</maxSeverity>
        <stages>

            <li>
                <label>trivial</label>
                <becomeVisible>false</becomeVisible>
            </li>

            <li>
                <label>minor</label>
                <minSeverity>0.1</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <postFactor>0.9</postFactor>
                    </li>
                </capMods>
                <statOffsets>
                    <MentalBreakThreshold>0.02</MentalBreakThreshold>
                </statOffsets>
                <restFallFactorOffset>0.3</restFallFactorOffset>
                <vomitMtbDays>5</vomitMtbDays>
            </li>

            <li>
                <label>moderate</label>
                <minSeverity>0.3</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <postFactor>0.8</postFactor>
                    </li>
                </capMods>
                <statOffsets>
                    <MentalBreakThreshold>0.04</MentalBreakThreshold>
                </statOffsets>
                <restFallFactorOffset>0.5</restFallFactorOffset>
                <vomitMtbDays>3</vomitMtbDays>
            </li>

            <li>
                <label>severe</label>
                <minSeverity>0.5</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <postFactor>0.7</postFactor>
                    </li>
                </capMods>
                <statOffsets>
                    <MentalBreakThreshold>0.06</MentalBreakThreshold>
                </statOffsets>
                <restFallFactorOffset>0.7</restFallFactorOffset>
                <vomitMtbDays>2</vomitMtbDays>
            </li>

            <li>
                <label>extreme</label>
                <minSeverity>0.7</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <postFactor>0.5</postFactor>
                    </li>
                </capMods>
                <statOffsets>
                    <MentalBreakThreshold>0.08</MentalBreakThreshold>
                </statOffsets>
                <restFallFactorOffset>1</restFallFactorOffset>
                <vomitMtbDays>1</vomitMtbDays>
            </li>

        </stages>
        <modExtensions>
            <li Class="Adrenaline.HediffDefExtension">
                <adrenalineCrash>
                    <targetSeverityGainPerAdrenalineRushHediffSeverityPerHour>0.5</targetSeverityGainPerAdrenalineRushHediffSeverityPerHour>
                    <baseSeverityGainPerDay>3</baseSeverityGainPerDay>
                    <baseTicksAtPeakSeverityBeforeSeverityLoss>30000</baseTicksAtPeakSeverityBeforeSeverityLoss>
                    <baseSeverityLossPerDay>0.5</baseSeverityLossPerDay>
                </adrenalineCrash>
            </li>
        </modExtensions>
    </HediffDef>

</Defs>